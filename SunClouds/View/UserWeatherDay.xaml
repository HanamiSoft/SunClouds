<UserControl x:Class="SunClouds.View.UserWeatherDailyCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SunClouds.View"
             mc:Ignorable="d" 
             d:DesignHeight="72" d:DesignWidth="120">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label  Style="{DynamicResource WeatherText24px}" HorizontalAlignment="Center" Grid.Row="0">
            <Label.Content>
                <TextBlock Width="auto" TextWrapping= "Wrap" Text="{Binding Name}"/>
            </Label.Content>
        </Label>

        <Label  Style="{DynamicResource WeatherText20px}" Grid.Row="1" HorizontalAlignment="Center">
            <Label.Content>
                <TextBlock Width="auto" TextWrapping= "Wrap" Text="{Binding Infos}"/>
            </Label.Content>
        </Label>

    </Grid>
</UserControl>
